{
  "name": "@rocket.chat/fuselage",
  "version": "0.66.4",
  "description": "Rocket.Chat's React Components Library",
  "homepage": "https://github.com/RocketChat/fuselage#readme",
  "bugs": {
    "url": "https://github.com/RocketChat/fuselage/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RocketChat/fuselage.git",
    "directory": "packages/fuselage"
  },
  "license": "MIT",
  "author": {
    "name": "Rocket.Chat",
    "url": "https://rocket.chat/"
  },
  "main": "index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/index.js"
  ],
  "scripts": {
    "start": "webpack --watch --mode development",
    "storybook": "storybook dev -p 6006 --no-version-updates",
    "build": "run-s .:build:clean .:build:dev .:build:prod",
    ".:build:clean": "rimraf dist",
    ".:build:prod": "webpack --mode production",
    ".:build:dev": "webpack --mode development",
    "lint": "lint",
    "lint-and-fix": "lint-and-fix",
    "test": "jest --runInBand",
    "watch": "jest --watch",
    "docs": "cross-env NODE_ENV=production storybook build -o ../../static/fuselage",
    "build-storybook": "cross-env NODE_ENV=production storybook build --stats-json",
    "update-storybook": "run-s .:update-storybook:build-storybook .:update-storybook:purge-refs .:update-storybook:loki-update resolve",
    "resolve": "resolve-loki",
    ".:update-storybook:build-storybook": "run-s build-storybook",
    ".:update-storybook:purge-refs": "rimraf .loki/reference",
    ".:update-storybook:loki-update": "loki update --chromeDockerImage=zenika/alpine-chrome --chromeFlags='--headless --no-sandbox --disable-gpu --disable-features=VizDisplayCompositor' --verboseRenderer --requireReference --reactUri file:./storybook-static",
    "prettier-format": "prettier 'src/**/*.{ts,tsx,js,jsx}' --write",
    "loki:test-ci": "loki test --chromeFlags='--headless --no-sandbox --disable-gpu --disable-features=VizDisplayCompositor' --requireReference --verboseRenderer --reactUri file:./storybook-static ",
    "loki:test": "loki test --chromeDockerImage=zenika/alpine-chrome --chromeFlags='--headless --no-sandbox --disable-gpu --disable-features=VizDisplayCompositor' --verboseRenderer --requireReference --reactUri file:./storybook-static"
  },
  "dependencies": {
    "@rocket.chat/css-in-js": "workspace:~",
    "@rocket.chat/css-supports": "workspace:~",
    "@rocket.chat/fuselage-tokens": "workspace:~",
    "@rocket.chat/memo": "workspace:~",
    "@rocket.chat/styled": "workspace:~",
    "invariant": "^2.2.4",
    "react-aria": "~3.37.0",
    "react-keyed-flatten-children": "^1.3.0",
    "react-stately": "~3.35.0"
  },
  "devDependencies": {
    "@babel/core": "~7.28.0",
    "@babel/plugin-transform-runtime": "~7.28.0",
    "@babel/preset-env": "~7.28.0",
    "@babel/preset-react": "~7.27.1",
    "@loki/create-async-callback": "~0.35.1",
    "@loki/is-loki-running": "~0.35.0",
    "@rocket.chat/fuselage-hooks": "workspace:~",
    "@rocket.chat/fuselage-polyfills": "workspace:~",
    "@rocket.chat/icons": "workspace:~",
    "@storybook/addon-a11y": "~9.0.18",
    "@storybook/addon-docs": "~9.0.18",
    "@storybook/addon-links": "~9.0.18",
    "@storybook/addon-styling-webpack": "~2.0.0",
    "@storybook/addon-webpack5-compiler-swc": "~3.0.0",
    "@storybook/react-webpack5": "~9.0.18",
    "@testing-library/dom": "~10.4.0",
    "@testing-library/jest-dom": "~6.6.3",
    "@testing-library/react": "~16.3.0",
    "@testing-library/user-event": "~14.6.1",
    "@types/express": "^4",
    "@types/invariant": "^2.2.37",
    "@types/jest-axe": "~3.5.9",
    "@types/react": "~18.3.23",
    "@types/react-dom": "~18.3.7",
    "autoprefixer": "~10.4.21",
    "babel-loader": "~10.0.0",
    "caniuse-lite": "~1.0.30001727",
    "cross-env": "^7.0.3",
    "css-loader": "~7.1.2",
    "cssnano": "~7.1.0",
    "eslint": "~9.29.0",
    "express": "^4.18.2",
    "jest": "~30.0.0",
    "jest-axe": "~10.0.0",
    "jest-environment-jsdom": "~30.0.5",
    "lint-all": "workspace:~",
    "loki": "~0.35.1",
    "mini-css-extract-plugin": "~2.9.2",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "postcss": "~8.5.5",
    "postcss-custom-properties": "~14.0.6",
    "postcss-dir-pseudo-class": "~9.0.1",
    "postcss-loader": "~8.1.1",
    "postcss-logical": "~8.1.0",
    "postcss-scss": "~4.0.9",
    "postcss-svg": "~3.0.0",
    "prettier": "~3.5.3",
    "react": "~18.3.1",
    "react-dom": "~18.3.1",
    "react-virtuoso": "~4.13.0",
    "resolve-loki": "workspace:~",
    "resolve-url-loader": "~5.0.0",
    "rimraf": "~6.0.1",
    "sass": "~1.89.2",
    "sass-loader": "~16.0.5",
    "storybook": "~9.0.18",
    "storybook-dark-mode": "patch:storybook-dark-mode@npm%3A4.0.2#~/.yarn/patches/storybook-dark-mode-npm-4.0.2-1acb0927fb.patch",
    "style-loader": "~4.0.0",
    "stylelint": "~16.20.0",
    "stylelint-order": "~7.0.0",
    "stylelint-prettier": "~5.0.3",
    "stylelint-scss": "~6.12.1",
    "testing-utils": "workspace:~",
    "ts-jest": "~29.4.0",
    "ts-loader": "~9.5.2",
    "typescript": "~5.8.3",
    "webpack": "~5.100.2",
    "webpack-bundle-analyzer": "~4.10.2",
    "webpack-cli": "~6.0.1",
    "wrapper-webpack-plugin": "~2.2.2"
  },
  "peerDependencies": {
    "@rocket.chat/fuselage-hooks": "*",
    "@rocket.chat/fuselage-polyfills": "*",
    "@rocket.chat/icons": "*",
    "react": "*",
    "react-dom": "*",
    "react-virtuoso": "*"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "loki": {
    "configurations": {
      "desktop": {
        "target": "chrome.docker",
        "width": 1440,
        "height": 896,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "tablet": {
        "target": "chrome.docker",
        "width": 768,
        "height": 970,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "mobile": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    },
    "fetchFailIgnore": ".*"
  }
}
