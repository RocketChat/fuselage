{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./.storybook"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src",
    "./.storybook/**/*",
    "./jest.config.ts",
    "./jest-setup.ts"
  ],
  "exclude": ["./dist", "./storybook-static/", "./*.js"]
}
