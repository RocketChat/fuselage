{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2024",
    "verbatimModuleSyntax": false,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "erasableSyntaxOnly": true,
    "isolatedModules": true
  },
  "include": [
    "./src",
    "./.storybook/**/*",
    "./jest.config.ts",
    "./jest-setup.ts"
  ],
  "exclude": ["./dist", "./storybook-static/", "./*.js"]
}
