{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./.storybook"],
    "target": "esnext",
    "module": "nodenext",
    "verbatimModuleSyntax": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src",
    "./.storybook/**/*",
    "./jest-setup.ts",
    "./vite.config.ts"
  ],
  "exclude": ["./dist"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "../../static/layout"
  }
}
