{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "../../static/fuselage-forms"
  },
  "include": ["src/**/*",  "./.storybook/**/*"],
  "exclude": ["node_modules", "dist"]
}
