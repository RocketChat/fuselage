{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": "@rocket.chat/eslint-config-alt/minimal",
  "env": {
    "jest": true
  },
  "ignorePatterns": ["dist", "node_modules", "src/lame/*.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": "@rocket.chat/eslint-config-alt/typescript",
      "rules": {
        "new-cap": "off"
      }
    }
  ]
}
