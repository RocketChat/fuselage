    "jest-environment-jsdom": "~29.7.0",
    "lint-all": "workspace:~",
    "npm-run-all": "^4.1.5",
    "prettier": "~3.5.2",
    "rimraf": "~6.0.1",
    "ts-jest": "~29.2.6",
