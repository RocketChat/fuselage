{
  "name": "@rocket.chat/fuselage-tokens",
  "version": "0.31.22",
  "description": "Design tokens for Fuselage, Rocket.Chat's design system",
  "homepage": "https://rocketchat.github.io/Rocket.Chat.Fuselage/",
  "author": {
    "name": "Rocket.Chat",
    "url": "https://rocket.chat/"
  },
  "module": "dist/esm/index.js",
