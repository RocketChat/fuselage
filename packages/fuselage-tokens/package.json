    "bump": "workspace:~",
    "eslint": "~8.26.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-prettier": "~4.2.1",
    "lint-all": "workspace:~",
    "lint-staged": "~12.3.8",
    "npm-run-all": "^4.1.5",
    "postcss-scss": "~4.0.6",
    "prettier": "~2.7.1",
    "rimraf": "^3.0.2",
    "style-dictionary": "~3.7.2",
    "stylelint": "~14.14.1",
    "stylelint-order": "~5.0.0",
