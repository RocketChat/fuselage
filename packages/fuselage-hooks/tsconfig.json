{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES5",
    "lib": ["DOM", "ES2015"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false
  }
}
