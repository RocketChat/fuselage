{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./.storybook"],
    "types": [],
    "strict": true,
    "target": "esnext",
    "module": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src",
    "./.storybook/**/*",
    "./jest.config.ts",
    "./jest-setup.ts"
  ],
  "exclude": ["./dist"]
}
