{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "custom/js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "colors.js",
          "format": "javascript/es6"
        }
      ]
    },
    "scss": {
      "transformGroup": "custom/scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "colors.scss",
          "format": "scss/variables"
        }
      ]
    }
  }
}
