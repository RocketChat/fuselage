{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDirs": ["./src", "./.storybook"],
    "target": "esnext",
    "module": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "resolvePackageJsonExports": true,
    "jsx": "react-jsx"
  },
  "include": ["./src", "./.jest/**/*", "./.storybook/**/*"],
  "exclude": ["./dist"]
}
