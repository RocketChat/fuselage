{
  "name": "@rocket.chat/fuselage-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "husky": "^7.0.4",
    "hygen": "^6.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "turbo": "^1.0.24",
    "update-readme": "workspace:tools/update-readme",
    "webpack": "^5.41.1"
  },
  "scripts": {
    "postinstall": "husky install",
    "ci": "yarn turbo run build lint test",
    "build": "yarn turbo run build",
    "lint": "yarn turbo run lint",
    "lint-and-fix": "yarn turbo run lint-and-fix",
    "test": "yarn turbo run test",
    "docs": "yarn turbo run docs",
    "build-storybook": "yarn turbo run build-storybook",
    "update-storybook": "yarn turbo run update-storybook",
    "loki:test": "yarn turbo run loki:test",
    "update-readme": "update-readme",
    "resolve-workspace-deps": "yarn workspace scripts run resolve-workspace-deps",
    "create-package": "hygen create-package"
  },
  "devEngines": {
    "node": "~14.17.6"
  },
  "volta": {
    "node": "14.17.6",
    "yarn": "1.22.11"
  },
  "packageManager": "yarn@3.1.0",
  "turbo": {
    "baseBranch": "origin/master",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "update-storybook": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "build-storybook": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "storybook-static/*"
        ]
      },
      "loki:test": {
        "dependsOn": [
          "^build-storybook"
        ],
        "outputs": []
      }
    }
  }
}
